/* pages/main/main.wxss */
.main_index{
  width: 500rpx;
  height: 400rpx;
}

.btn{
  margin-top: 100rpx;
}

.swiper {
    width: 100%;
    height: 70vw;
}

.image_item{
  width: 100%;
  height: 90%;
}

.container{
  padding: 0 0;
  justify-content: flex-start;
  align-items: left;
}

.welcome {
    padding: 0vw 4vw;
    text-align: center;
}

.welcome-title {
    font-size: 5.2vw;
    padding-bottom: 5vw;
    margin-top: 5vw;
    align-self:center;

}

.welcome-txt {
    font-size: 4.5vw;
    line-height: 25px;
    letter-spacing: 0.7px;
    height:50px;
}

.wxNumber{
  text-align: left;
  margin-top:10vw;

}

.navigator_txt{
  margin-top: 5vw;
  font-size: 4.4vw;
  color: #46a1b4;
  text-shadow: 1px 1px 2px #083944;
}

.title{
  font-size: 16px;
  margin-left: 3vw;
}

.detail{
  font-size: 14px;
  margin-left: 3vw;
  color: #888888;
}

.card{
  width: 94%;
  margin-top: 4vw;
  padding-bottom: 4vw;
  margin-left: 3vw;
  border-bottom: 1px solid #e4e9f0;
}

.description{
  margin-top: 3vw;
  margin-left: 4vw;
  font-size: 14px;
  line-height: 8vw;
  color: #888888;
  margin-right: 3vw;
}

.c-green{
  background-image: url("http://file03.16sucai.com/2016/10/1100/16sucai_p20161030003_017.JPG");
  background-size: cover;
}